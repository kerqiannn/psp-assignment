from tabulate import tabulate
import random

def generate_random_table(size):
    table_data = []
    for _ in range(size):
        row = [random.randint(-30, 30 ) for _ in range(size)]
        table_data.append(row)

    column_headers = [f"Column {col}" for col in range(1, size + 1)]
    row_headers = [f"Row {row}" for row in range(1, size + 1)]

    table = tabulate(table_data, headers=column_headers, showindex=row_headers, tablefmt="grid")

    return table

def main():
    input_correct = False

    while not input_correct:
        size = int(input("Enter the size of the game board (2 to 8): "))
        if size >= 2 and size <= 8:
            input_correct = True
        else:
            print("Wrong input, please re-enter.")

    random_table = generate_random_table(size)
    print(random_table)
    print(f"{'Player 1 :':<15} {'Player 2 :'}")

main()
